<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stocks.Views.StockSymbolView">
    <Grid RowSpacing="6" ColumnSpacing="6" RowDefinitions="*,*" ColumnDefinitions="*,*">
        <Label x:Name="NameLabel"
            Grid.Row="0"
            Grid.Column="0"
            Text="Dow Jones"
            FontSize="Title"
            FontAttributes="Bold"
            HorizontalOptions="Start" />

        <Label x:Name="DescriptionLabel"
            Grid.Row="1"
            Grid.Column="0"
            Text="Dow Jones Industrial Average"
            LineBreakMode="TailTruncation"
            TextColor="Gray"
            FontSize="Subtitle"
            HorizontalOptions="Start" />

        <Label x:Name="MarketPriceLabel"
            Grid.Row="0"
            Grid.Column="1"
            Text="33,800.47"
            FontSize="Title"
            FontAttributes="Bold"
            HorizontalOptions="End" />

        <Border x:Name="MarketChangeLabelBorder"
            Background="Green"
            Grid.Row="1"
            Grid.Column="1"
            HorizontalOptions="End"
            StrokeThickness="0">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="5,5,5,5" />
            </Border.StrokeShape>

            <Label x:Name="MarketChangeLabel"
                Text="+15.16"
                FontSize="Subtitle"
                HorizontalTextAlignment="End" />
        </Border>
    </Grid>
</ContentView>
